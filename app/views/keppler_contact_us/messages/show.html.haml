= title(t('keppler.titles.show', model: t("keppler.models.pluralize.messages")))
.wrapper
	.wrapper-body.container
		.actions
			- if can? :delete, KepplerContactUs::Message
				= link_to message_path(@message), class: "btn-floating btn-flat right tooltipped", "data-position" => "bottom", "data-tooltip" => t("keppler.actions.delete"), method: :delete, data: { confirm: t("keppler.messages.data_confirm") } do
					= material_icon.md_18.delete.css_class("md-dark")
			= link_to messages_path, class: "btn-floating btn-flat tooltipped", "data-position" => "bottom", "data-tooltip" => t("keppler.actions.back") do
				= material_icon.md_18.arrow_back.css_class("md-dark")
		.card
			.card-content
				%ul.list
					%li.list-row
						.display-label= model.human_attribute_name(:name)
						.display-value.fs-body-1.tc-black-2= @message.name.humanize
					%li.list-row
						.display-label= model.human_attribute_name(:email)
						.display-value.fs-body-1.tc-black-2= @message.email
					%li.list-row
						.display-label= model.human_attribute_name(:phone)
						.display-value.fs-body-1.tc-black-2= @message.phone
					%li.list-row
						.display-label= model.human_attribute_name(:company)
						.display-value.fs-body-1.tc-black-2= @message.company.humanize
					%li.list-row
						.display-label= model.human_attribute_name(:content)
					%hr
					.display-value.fs-body-1.tc-black-2= @message.content.humanize
